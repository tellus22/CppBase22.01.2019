#include <iostream>
#include <math.h>
using namespace std;
int main() {
	setlocale (LC_ALL, "");
	setlocale (0,".1251");
	
	int a, b, selection;
	cout<<"Put value a "; 
	cin>>a;
	
	cout<<"Put value b "; 
	cin>>b;
	
	cout<<"Specify action "<<endl<<
	"1. +"<<endl<<
	"2. -"<<endl<<
	"3. *"<<endl<<
	"4. /"<<endl; 
	
	cin>>selection;
	
	switch(selection){
		
		
		case 1:
			cout<<"Result "<< a + b <<endl;
			break;
		
		case 2:
			cout<<"Result "<< a - b <<endl;
			break;
		
		case 3:
			cout<<"Result "<< a * b <<endl;
			break;
		
		case 4:
			cout<<"Result "<< (float)a / b <<endl;
			break;
		
	}
	
	
	system ("pouse>>void");
	
	return 0;
}

